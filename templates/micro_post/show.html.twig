{% extends 'base.html.twig' %}

{% block title %}Post - {{ post.title }}{% endblock %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <p>{{ post.text }}</p>
    <div style='color: gray;'>
        {% if date(post.created) < date('-1year') %}
            <p>Older than 1 year</p>
        {% else %}
            <p>{{ post.created|date('d/m/Y') }}</p>
        {% endif %}
    </div>
{% endblock %}
